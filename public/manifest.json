{
  "manifest_version": 2,

  "name": "Michael Jordan chat extension",
  "description": "This extesion adds chat capability to every page",
  "version": "1.0",

  "browser_action": {
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "./vendor/jquery.min.js",
        "./vendor/socket.io.js",
        "./vendor/simplepeer.min.js",
        "./vendor/jquery.custom/jquery-ui.min.js",
        "video.js"
      ],
      "css": ["video.style.css",
        "./vendor/jquery.custom/jquery-ui.min.css", "./vendor/jquery.custom/jquery-ui.structure.min.css",  "./vendor/jquery.custom/jquery-ui.theme.min.css" ]

    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
