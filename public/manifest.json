{
  "manifest_version": 2,

  "name": "Michael Jordan chat extension",
  "description": "This extesion adds chat capability to every page",
  "version": "1.0",

  "browser_action": {
    "default_popup": "index.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "./vendor/jquery.min.js",
        "./vendor/socket.io.js",
        "./vendor/simplepeer.min.js",
        "video.js"
      ]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
